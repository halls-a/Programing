/*파일명: main.c
*내용: 점의 좌표를 입력받아 스크린 상의 선택 영역 내의 점인지 검사하는 프로그램
*작성자: 전기준
*날짜: 2025.04.20.
*버전: v1.0
*/

#include <stdio.h>

int x1, x2, y1, y2, dot_x, dot_y; // 전역변수

/*
    함수명: Assignment0501()
    기능: 선택 영역의 좌상단과 우하단점, 그리고 영역 내 혹은 외의 점인지 판단 될 점을 입력받음.
    반환: 정수이며, 0이면 성공, 그 외의 값은 에러.
*/

int Assignment0501(){

    // 1. 좌상단 좌표값을 입력받아 저장.
    printf("선택 영역의 좌상단점 (left, top)? ");
    scanf("%d %d", &x1, &y1);

    // 2. 우하단 좌표값을 입력받아 저장.
    printf("선택 영역의 우하단점 (right, bottom)? ");
    scanf("%d %d", &x2, &y2);

    // 3. 판단될 점의 좌표값을 입력받아 저장.
    printf("점의 좌표 (x,y)? ");
    scanf("%d %d", &dot_x, &dot_y);

    return 0;
}

/*
    함수명: judge()
    기능: 입력된 점 좌표가 사각형 내의 점인지 아닌지를 판단함
*/

void judge(){

    Assignment0501();

    // 2. 만약 x,y 좌표값이 좌상단 점보다 작거나, 우하단 점보다 크다면 사각형 밖, 아니면 내의 점이라고 판단함.
    if (x2 < dot_x < x1 || y2 < dot_y < y1){
        printf("직사각형 모양의 선택 영역 내의 점입니다");
    } else {
        printf("직사각형 모양의 선택 영역 내의 점이 아닙니다.");
    }

}

int main(){

    judge();

    return 0;
}
