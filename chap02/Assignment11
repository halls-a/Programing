#include <stdio.h>
//#define pi = 3.14159265

float Pi(){

double pi = 3.14159265;

printf("pi = %.2f\n", pi);
printf("pi = %.4f\n", pi);
printf("pi = %.6f\n", pi);
printf("pi = %.8f\n", pi);
printf("pi = %e\n", pi);


}

int main(){

    Pi();

    return 0;
}
